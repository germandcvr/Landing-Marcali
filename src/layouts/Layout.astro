---
import '@glidejs/glide/dist/css/glide.core.min.css';
import '@glidejs/glide/dist/css/glide.theme.min.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Marcali Salon Internacional del Automovil" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo-marcali.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Google Tag Manager -->
		<script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
		new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
		j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
		'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
		})(window,document,'script','dataLayer','GTM-57RFB3DX');</script>
		<!-- End Google Tag Manager -->
	</head>
	<body class="bg-tercero font-NouvelR-Semibold">
		<slot />
		<script type="text/javascript" src="https://app.carnow.com/plugin/EChayvo3d6nymi3Ds0JcuL081mCrnt2doFoFfrAt1iskrbqh.js"></script>
	</body>

	<!-- Google Tag Manager (noscript) -->
	<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-57RFB3DX"
		height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<!-- End Google Tag Manager (noscript) -->
</html>
<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	/** Utilidades */
	.wrapper {
		@apply w-[90%] mx-auto overflow-hidden max-w-screen-xl;
	}

	strong {
		@apply font-NouvelR-Extrabold;
	}

	@font-face {
		font-family: 'Arial Rounded MT Bold';
		font-display: swap;
		src: url("/fonts/arial-rounded-mt-bold.woff") format("woff");
	}

	@font-face {
		font-family: 'NouvelR Semibold';
		font-display: swap;
		src: url("/fonts/NouvelRSemibold.woff") format("woff");
	}

	@font-face {
		font-family: 'NouvelR Bold';
		font-display: swap;
		src: url("/fonts/NouvelRBold.woff") format("woff");
	}

	@font-face {
		font-family: 'NouvelR Extrabold';
		font-display: swap;
		src: url("/fonts/NouvelRExtrabold.woff") format("woff");
	}
</style>
